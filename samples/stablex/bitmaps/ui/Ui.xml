<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns="ru.stablex.ui.widgets" xmlns:skin="ru.stablex.ui.skins" w="flash.Lib.current.stage.stageWidth" h="flash.Lib.current.stage.stageHeight">

    <!-- without stretching -->
    <HBox padding="50" childPadding="30" w="100%">
        <skin>
            <skin:Paint color="0x555555"/>
        </skin>

        <!-- full image -->
        <Bmp src="'assets/haxe.png'"/>

        <!-- part of image -->
        <Bmp src="'assets/haxe.png'" xOffset="72" yOffset="72" w="76" h="76"/>

        <!-- part of image with autoWidth -->
        <Bmp src="'assets/haxe.png'" xOffset="0" yOffset="0" autoWidth="true" h="148"/>
    </HBox>

    <!-- with stretching -->
    <HBox padding="50" childPadding="30" w="100%">
        <skin>
            <skin:Paint color="0x555555"/>
        </skin>
        <!-- distorted -->
        <Bmp src="'assets/haxe.png'" w="100" h="100"/> <!-- stretch="true" -->
        <!-- fixed aspect ratio -->
        <Bmp src="'assets/haxe.png'" w="100" h="100"/> <!-- stretch="true" keepAspect="true" -->
    </HBox>
</VBox>
